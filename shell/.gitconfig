[user]
	name = Evan Harvey 
	email = harveyem@utas.edu.au 

[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
	safecrlf = true
	editor = nvim

[url "git@github.com:"]
	insteadOf = gh:

[github]
	user = blinklad

[credential]
	helper = cache --timeout=3600

[merge]
  tool = vimdiff

[mergetool]
  prompt = true

[mergetool "vimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[difftool]
  prompt = false

[diff]
  tool = vimdiff

